extends layout

block content
  h2 This is publicparkinglot :)
  table
    thead
      th address
      th type
      th operatingDays
      th fee
      th paymentMethod
      th name
    tbody
      for item in results
        tr
          td=item.address
          td=item.type
          td=item.operatingDays
          td=item.fee
          td=item.paymentMethod
          td
            a(href='/post?title=publicParkingLot&id=' + item.ID)=item.name

  style.
    table {
    width: 100%;
    border-top: 1px solid #444444;
    border-collapse: collapse;
    }
    th, td {
    padding: 10px;
    text-align: center;
    }
    thead tr {
    background-color: gray;
    color: #ffffff;
    }
    tbody tr:nth-child(2n) {
    background-color: #d3d3d3;
    }
    tbody tr:nth-child(2n+1) {
    background-color: white;
    }
 
