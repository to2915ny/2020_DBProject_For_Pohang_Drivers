extends layout

block content
  h2 This is CarService :)
  .jumbotron
   h1.display-4 
   table
      for item in results
        tr
          td=item.address
          td=item.phoneNumber
          td
            a(href='/post?title=carService&id=' + item.ID)=item.name

  style.
    table {
    width: 100%;
    border-top: 1px solid #444444;
    border-collapse: collapse;
    }
    th, td {
    border-bottom: 1px solid #444444;
    padding: 10px;
    } 
