extends layout

block content
  p Wheelchair Charger
  table
    thead
      th address
      th phoneNumber
      th starttime
      th endtime
      th location
      th name
    tbody 
      for item in results
        tr
          td=item.address
          td=item.phonenumber
          td=item.starttime
          td=item.endtime
          td=item.location
          td
            a(href='/post?title=wheelchairCharger&id=' + item.ID)=item.name

  style.
    table {
    width: 100%;
    border-top: 1px solid #444444;
    border-collapse: collapse;
    }
    th, td {
    padding: 10px;
    text-align: center;
    }
    thead tr {
    background-color: gray;
    color: #ffffff;
    }
    tbody tr:nth-child(2n) {
    background-color: #d3d3d3;
    }
    tbody tr:nth-child(2n+1) {
    background-color: white;
    }

