extends layout

block content
  h2 This is Wheelchair Charger :)
  .jumbotron
    h1.display-4
    table
      for item in results
        tr
          td=item.name
          td=item.address
          td=item.phonenumber
          td=item.starttime
          td=item.endtime
          td=item.location
          td
            a(href='/post?title=wheelchairCharger&id=' + item.ID)=item.name

  style.
    table {
    width: 100%;
    border-top: 1px solid #444444;
    border-collapse: collapse;
    }
    td {
    border-bottom: 1px solid #444444;
    padding: 10px;
    }
