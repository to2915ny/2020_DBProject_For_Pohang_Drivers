extends layout

block content

  h1.display-3
    storng TITLE

  .row
    .card.border-primary.mb-3(style='max-width: 20rem;')
      .card-header Information
      .card-body
        table
          for item in posts
            for list in item 
              td=list
    .jumbotron
      h1.display-4
        strong Reviews
      table
        for item in reviews
          tr
            td=item.reviewID
            td=item.Name
            td=item.Text
            td=item.rating
      form(action='/create' method='get')
        input(type='text' name='title' placeholder='타이틀')
        input(type='number' name='rating' max='5' placeholder='5점만점')
        input(type='hidden' name='id', value=id)
        textarea(rows='4' cols='50' name='content' required maxlength='300')
        input(type='submit' value='Submit')

  .jumbotron
    h1.display-4
      strong Map to go
  
    .mapouter
      .gmap_canvas
        for a in posts
          iframe#gmap_canvas(width='1000' height='500' src='https://map.kakao.com/?q='+a.address frameborder='0' scrolling='no' marginheight='0' marginwidth='0')
      style.
       .mapouter{position:relative;text-align:right;height:500px;width:1000px;}.gmap_canvas {overflow:hidden;background:none!important;height:500px;width:1000px;}                                                                                                                                  
     


